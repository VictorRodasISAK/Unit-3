ScreenManager:
    id: scr_manager
    TableScreen:
        name: 'TableScreen'

<TableScreen>:
    MDLabel:
        pos_hint: {'center_x': 0.5, 'center_y': 0.9}
        text: 'Ledger'
        font_style: 'H2'
        halign: 'center'
        size_hint: 0.8, 0.8

    MDLabel:
        pos_hint: {'center_x': 0.5, 'center_y': 0.1}
        text: 'New Record'
        font_style: 'H4'

    MDBoxLayout:
        orientation: 'horizontal'
        size_hint: 0.8, 0.05
        pos_hint: {'center_x': 0.5, 'center_y': 0.2}
        MDTextField:
            id: sender
            hint_text: 'Sender'
            size_hint_x: 0.2
        MDTextField:
            id: receiver
            hint_text: 'Receiver'
            size_hint_x: 0.2
        MDTextField:
            id: amount
            filter: 'integer'
            hint_text: 'Amount'
            size_hint_x: 0.2

        MDRaisedButton:
            text: 'Add'
            on_release: root.save()